<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_x2">

        <TextView
            android:id="@+id/textViewPlanHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin_x2"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/textViewRechargeAmount"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPlanHead"
            tools:text="@tools:sample/us_phones" />

        <TextView
            android:id="@+id/textViewRechargeAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewMobileNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toEndOf="@id/textViewMobileNumber"
            android:text="@string/text_recharge_amount" />

        <TextView
            android:id="@+id/textViewRechargeDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMobileNumber"
            tools:text="@tools:sample/date/mmddyy" />
        <View
            android:id="@+id/devider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewRechargeDate"/>

        <TextView
            android:id="@+id/textViewPaymentModeHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:gravity="start"
            android:textSize="@dimen/material_text_subhead"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewPaymentMode"
            app:layout_constraintTop_toBottomOf="@id/devider"/>

        <TextView
            android:id="@+id/textViewPaymentMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:gravity="end"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintStart_toEndOf="@id/textViewPaymentModeHead"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewPaymentModeHead"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewReferenceNumberHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reference number"
            android:gravity="start"
            android:layout_marginTop="@dimen/standard_margin"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewReferenceNumber"
            app:layout_constraintTop_toBottomOf="@id/textViewPaymentModeHead"/>

        <TextView
            android:id="@+id/textViewReferenceNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/us_phones"
            android:gravity="end"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintStart_toEndOf="@id/textViewReferenceNumberHead"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewReferenceNumberHead"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>