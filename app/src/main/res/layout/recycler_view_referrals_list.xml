<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="@dimen/cardElevation"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    android:layout_margin="@dimen/standard_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_margin_x2">

        <TextView
            android:id="@+id/textViewMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginEnd="@dimen/standard_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintEnd_toStartOf="@id/textViewSubscription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="@tools:sample/us_phones" />

        <TextView
            android:id="@+id/textViewSubscription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Not Subscribed"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewMobileNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewMobileNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>