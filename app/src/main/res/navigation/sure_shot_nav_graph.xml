<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sure_shot_nav_graph"
    app:startDestination="@id/SignUpFragment">

    <fragment
        android:id="@+id/SignUpFragment"
        android:name="com.sureshotdiscount.app.ui.signup.SignUpFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUp_to_verifyOTP"
            app:destination="@id/VerifyOTPFragment"
            app:popUpTo="@id/SignUpFragment" />
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/SignInFragment"
            app:popUpTo="@id/SignUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/VerifyOTPFragment"
        android:name="com.sureshotdiscount.app.ui.verification.VerifyOTPFragment"
        android:label=""
        tools:layout="@layout/fragment_verify_o_t_p" />
    <fragment
        android:id="@+id/DashboardFragment"
        android:name="com.sureshotdiscount.app.ui.dashboard.DashboardFragment"
        android:label="Sure Shot Discounts"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_referEarnFragment"
            app:destination="@id/ReferEarnFragment"
            app:popUpTo="@id/DashboardFragment" />
        <action
            android:id="@+id/action_dashboard_to_rechargeOneFragment"
            app:destination="@id/RechargeOneFragment"
            app:popUpTo="@id/DashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/ReferEarnFragment"
        android:name="com.sureshotdiscount.app.ui.referandearn.ReferEarnFragment"
        android:label="Refer and Earn"
        tools:layout="@layout/fragment_refer_earn" />
    <fragment
        android:id="@+id/RechargeOneFragment"
        android:name="com.sureshotdiscount.app.ui.recharge.RechargeFragment"
        android:label="Recharge"
        tools:layout="@layout/fragment_recharge">
        <action
            android:id="@+id/action_rechargeOneFragment_to_rechargeTwoFragment"
            app:destination="@id/navigation"
            app:popUpTo="@id/RechargeOneFragment" />
        <action
            android:id="@+id/action_rechargeOneFragment_to_dashboardFragment"
            app:destination="@id/DashboardFragment"
            app:popUpTo="@id/RechargeOneFragment" />
    </fragment>
    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/RechargeTwoFragment">
        <fragment
            android:id="@+id/MobileRechargeFragment"
            android:name="com.sureshotdiscount.app.ui.mobile.MobileRechargeFragment"
            tools:layout="@layout/fragment_mobile_recharge" />
        <fragment
            android:id="@+id/PrepaidFragment"
            android:name="com.sureshotdiscount.app.ui.prepaid.PrepaidFragment"
            tools:layout="@layout/fragment_prepaid" />
        <fragment
            android:id="@+id/RechargeTwoFragment"
            android:name="com.sureshotdiscount.app.ui.rechargedetails.RechargeDetailsFragment"
            android:label="Recharge"
            tools:layout="@layout/fragment_recharge_details">
            <action
                android:id="@+id/action_rechargeTwoFragment_to_subscriptionFragment"
                app:destination="@id/SubscriptionFragment"
                app:popUpTo="@id/RechargeTwoFragment" />
            <action
                android:id="@+id/action_rechargeTwoFragment_to_dashboardFragment"
                app:destination="@id/DashboardFragment"
                app:popUpTo="@id/RechargeTwoFragment" />
            <action
                android:id="@+id/action_rechargeTwoFragment_to_rechargeOneFragment"
                app:destination="@id/RechargeOneFragment"
                app:popUpTo="@id/RechargeTwoFragment" />
        </fragment>
        <fragment
            android:id="@+id/PostpaidFragment"
            android:name="com.sureshotdiscount.app.ui.postpaid.PostpaidFragment"
            tools:layout="@layout/fragment_postpaid" />
        <fragment
            android:id="@+id/DTHFragment"
            android:name="com.sureshotdiscount.app.ui.dth.DTHFragment"
            tools:layout="@layout/fragment_d_t_h" />
        <fragment
            android:id="@+id/PaymentSuccesFragment"
            android:name="com.sureshotdiscount.app.ui.payment.PaymentSuccessfulFragment"
            android:label=""
            tools:layout="@layout/fragment_payment_successful" />
        <fragment
            android:id="@+id/SubscriptionFragment"
            android:name="com.sureshotdiscount.app.ui.subscription.SubscriptionFragment"
            android:label="Benefits of Subscription"
            tools:layout="@layout/fragment_subscription">
            <action
                android:id="@+id/action_subscriptionFragment_to_paymentSuccessFragment"
                app:destination="@id/PaymentSuccesFragment"
                app:popUpTo="@id/SubscriptionFragment" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/SignInFragment"
        android:name="com.sureshotdiscount.app.ui.signin.SignInFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signIn_to_VerifyOTP"
            app:destination="@id/VerifyOTPFragment"
            app:popUpTo="@id/SignInFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_Dashboard"
        app:destination="@id/DashboardFragment"
        app:launchSingleTop="true"
        app:popUpToInclusive="true" />
</navigation>